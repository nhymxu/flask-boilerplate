# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 120

[*.{html,css,scss,yml,yaml}]
indent_size = 2

[{*.json,**.min.js}]
indent_size = 2
insert_final_newline = false

[Makefile]
indent_style = tab

[*.bat]
indent_style = tab

[docs/**.txt]
max_line_length = 79
